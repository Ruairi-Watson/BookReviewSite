<h1>Book List</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book[:title] %></td>
      <td><%= book[:author] %></td>
      <td><%= book[:description] %></td>
      <td>
        <%= link_to 'View', book_path(book[:id]) %> |
        <%= link_to 'Edit', edit_book_path(book[:id]) %>
      </td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to 'Add New Book', new_book_path %>
